- const title = "Clock"
- const description = "Analog clock whose nine sets of hands reveal patterns of time"
- const currentYear = new Date().getFullYear().toString().substr(-2)

doctype html
html(lang="en")
  head
    title= title
    meta(charset="utf-8")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="description" content=description)
    meta(name="theme-color" content="#fff")
    meta(name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover")
    link(rel="apple-touch-icon" href="/apple-touch-icon.png")
    link(rel="icon" type="image/svg+xml" href="/favicon.svg")
    link(rel="manifest" href="/pwa/manifest.json")
    link(rel="preload" href="https://assets.gauslin.com/fonts/AvenirNext-Variable.woff2" as="font" type="font/woff2" crossorigin="crossorigin")
  body(no-touch no-js)
    clock-app.app(target="main")
      app-header.header
        div.header__frame
          digital-clock(target=".site-name")
            h1.site-name= title
          color-picker.color-picker
      main
        noscript Please <a href="https://www.enable-javascript.com/" title="How to enable JavaScript in your browser">enable JavaScript</a> to view this app.
      footer.footer
        p.footer__blurb.footer__blurb--copyright
          span.footer__years © 2018–#{currentYear}
          a.footer__link(
            href="https://gauslin.com"
            title="Visit Ben Gauslin’s Website"
          ) Ben Gauslin
        p.footer__blurb.footer__blurb--repo
          a.footer__link(
            href="https://github.com/bgauslin/clock"
            title="View source code on GitHub"
          ) GitHub
