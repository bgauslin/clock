- const title = "Clock"
- const description = "Analog clock whose nine sets of hands reveal patterns of time"
- const currentYear = new Date().getFullYear().toString().substr(-2)

doctype html
html(lang="en")
  head
    title= title
    meta(charset="utf-8")
    meta(name="description" content=description)    
    meta(name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover")
    meta(name="theme-color" content="#fff")
    meta(name="apple-mobile-web-app-capable" content="yes")
    link(rel="preload" href="https://assets.gauslin.com/fonts/AvenirNext-Variable.woff2" as="font" type="font/woff2" crossorigin="crossorigin")
    link(rel="apple-touch-icon" href="/apple-touch-icon.png")
    link(rel="manifest" href="/pwa/manifest.json")
  body(no-touch no-js)
    clock-app.app(target=".content")
      app-header.header
        div.header__frame
          digital-clock(target=".site-name")
            h1.site-name= title
          color-picker.color-picker
      main.content
        noscript Please <a href="https://www.enable-javascript.com/" title="How to enable JavaScript in your browser">enable JavaScript</a> to view this app.
      footer.footer
        p.copyright
          span.copyright__years © 2018–#{currentYear}
          a.copyright__owner(
            href="https://gauslin.com",
            title="Ben Gauslin’s Website",
            target="_blank",
            rel="noopener",
          ) Ben Gauslin
