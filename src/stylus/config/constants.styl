MENU_ARROW = 10px

// @const String
MENU_ITEM_SIZE = px_to_rem(40)

// @type Hash
Breakpoint = {
  MEDIUM: 'screen and (min-width: %s)' % px_to_rem(640)
}

// NOTE: All 'Clock' hash values need to stay coordinated with
// values in 'source/js/modules/customClock.js'
// @type Hash
Clock = {
  SIZE: 100
  CENTER: 50 // Half of SIZE
  STROKE_WIDTH: 3
  HOURS_HAND_LENGTH: 30
}

// @type Number
MINUTES_HAND_LENGTH = Clock.CENTER - Clock.STROKE_WIDTH

// Clocks lay out in a 3 x 3 grid.
// @type Number
CLOCK_WIDTH = 1 / 3

// @type String
CLOCKS_MAX_WIDTH = 40rem // = 512px

// Calculate the offset as a percentage for laying out clocks mathematically.
// @type Number
CLOCK_OFFSET = (Clock.SIZE - Clock.HOURS_HAND_LENGTH - MINUTES_HAND_LENGTH) * CLOCK_WIDTH

