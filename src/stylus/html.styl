@font-face
  font-display swap
  font-family 'Avenir Variable'
  font-weight 1 999
  src url('https://assets.gauslin.com/fonts/AvenirNext-Variable.woff2') format('woff2')

*
  box-sizing border-box

html
  height -webkit-fill-available
  margin 0
  padding 0
  -webkit-tap-highlight-color transparent
  text-size-adjust none

a
  color var(--link-color)
  outline 0

svg
  height auto
  pointer-events none
  vertical-align middle
  width 100%

svg path
  fill currentColor

// Remove all default styles from form elements.
button
[type=checkbox]
[type=radio]
  appearance none
  background none
  border 0
  margin 0
  outline 0
  padding 0
