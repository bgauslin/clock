app-theme
  align-items center
  color var(--link)
  cursor pointer
  display flex
  height var(--header-height)
  justify-content center
  margin-right px_to_rem(-8)
  transition color var(--transition), transform var(--transition)
  width var(--button-width)

app-theme:focus
app-theme:active
[no-touch] app-theme:hover
  color var(--link-active)

app-theme:active
  transform scale(.8)

.icon--themifier
  flex 0 0 px_to_rem(20)
