.themifier
  align-items center
  color var(--link)
  cursor pointer
  display flex
  height var(--header-height)
  justify-content center
  margin-right px_to_rem(-8)
  transition color var(--transition), transform var(--transition)
  width var(--button-width)

.themifier:focus
.themifier:active
[no-touch] .themifier:hover
  color var(--link-active)

.themifier:active
  transform scale(.8)

.icon--themifier
  flex 0 0 px_to_rem(20)
