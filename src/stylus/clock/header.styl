.header
  elevation(1)
  background var(--header-background)
  color var(--text)
  grid-area header
  padding 0 5vw
  position sticky
  top 0
  transition background var(--transition), border var(--transition), color var(--transition)

.header__frame
  align-items center
  display flex
  height var(--header-height)
  margin 0 auto
  max-width MAX_WIDTH

.site-name
  font-size var(--site-header)
  line-height 1
  margin 0
  white-space nowrap
