.footer
  color var(--text)
  grid-area footer
  opacity .7
  padding 0 0 env(safe-area-inset-bottom)

.copyright
  align-items center
  display flex
  font-size var(--fineprint)
  height var(--footer-height)
  justify-content center
  margin 0
  padding 0
  text-align center

.copyright__years
.copyright__owner
  transition color var(--transition)

.copyright__years
  margin-right px_to_em(8)

.copyright__owner
  link(var(--link), var(--link), var(--link-active), var(--link-active))

[no-touch] .copyright__owner:hover
  transition color var(--transition)
