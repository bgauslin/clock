.footer
  align-items center
  border-top 1px solid var(--border)
  color var(--text)
  display flex
  grid-area footer
  height var(--footer-height)
  justify-content center
  transition border var(--transition)

.copyright
  font-size var(--fineprint)
  margin 0
  padding 0
  text-align center

.copyright__years
.copyright__owner
  transition color var(--transition)

.copyright__years
  margin-right px_to_em(4)

.copyright__owner
  font-variation-settings 'wght' 600
  link(var(--link), var(--link), var(--link-active), var(--link-active))

[no-touch] .copyright__owner:hover
  transition color var(--transition)
