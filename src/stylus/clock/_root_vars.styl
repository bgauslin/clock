:root
  --button-width px_to_rem(44)
  --footer-height px_to_rem(60)
  --header-height px_to_rem(44)
  --site-header px_to_rem(16)
  --transition .3s ease-out
  --fineprint px_to_em(12)

  for name, values in ColorPalette
    [color={name}]
      --face '%s' % values.face
      --hands '%s' % values.hands

  [theme=light]
    --background #f7f7f7
    --border #ddd
    --header-background white
    --link DARK_GREY
    --link-active rgba(DARK_GREY, .7)
    --text DARK_GREY

  [theme=dark]
    --background #262626
    --border #333
    --header-background DARK_GREY
    --link white
    --link-active rgba(white, .7)
    --text white

  @media Breakpoint.MEDIUM
    --fineprint px_to_em(14)
    --header-height px_to_rem(60)
    --site-header px_to_rem(20)
