footer
  align-items center
  color var(--text)
  display flex
  font-size var(--fineprint)
  grid-row 3
  height var(--footer-height)
  justify-content center
  opacity .7
  padding 0 0 env(safe-area-inset-bottom)
  transition color transition

  a
    link(var(--link), var(--link), var(--link-active), var(--link-active))

    [no-touch] &:hover
      transition color transition
