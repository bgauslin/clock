main
  align-self center
  grid-area main
  justify-self center
  padding 0 env(safe-area-inset-right) var(--header-height) env(safe-area-inset-left)

  a
    color var(--text)
    text-decoration underline
    transition opacity transition

    &:hover
    &:focus
      opacity .5

[no-js] main
  color var(--text)
