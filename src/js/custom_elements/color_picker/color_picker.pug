- const buttonLabel = 'Color options'

button(
  id="menu-toggle"
  title=buttonLabel
  aria-controls="color-menu"
  aria-expanded="false"
  aria-haspopup="true"
  aria-label=buttonLabel
)
  svg(
    viewbox="0 0 24 24"
    aria-hidden="true"
  )
    circle(cx="4" cy="4" r="2.5")
    circle(cx="12" cy="4" r="2.5")
    circle(cx="20" cy="4" r="2.5")
    circle(cx="4" cy="12" r="2.5")
    circle(cx="12" cy="12" r="2.5")
    circle(cx="20" cy="12" r="2.5")
    circle(cx="4" cy="20" r="2.5")
    circle(cx="12" cy="20" r="2.5")
    circle(cx="20" cy="20" r="2.5")
ul(
  id="color-menu"
  role="menu"
  aria-labelledby="menu-toggle"
  aria-hidden="true"
)
  each color in colors
    - const [colorName] = color
    li
      label(
        for=colorName
        tabindex="0"
      )
        input(
          type="radio"
          name="color"
          id=colorName
          value=colorName
          checked=(colorName === colorSelected)
        )
        span(
          color=colorName
          aria-hidden="true"
        )= colorName
        div(
          color=colorName
          aria-hidden="true"
        )
