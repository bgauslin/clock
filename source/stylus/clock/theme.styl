for name, theme in ClockTheme
  [theme={name}]
    {body}&
      background '%s' % theme.BACKGROUND

    .clocks
      background '%s' % theme.FACE
      border 1px solid '%s' % theme.BORDER

    .clock__hand
      stroke '%s' % theme.HANDS

    .clock__pivot
      fill '%s' % theme.HANDS
    
    .copyright
      color '%s' % theme.TEXT

    .copyright__link
      link(theme.LINK, theme.LINK, theme.LINK_ACTIVE)

    {body}&[no-touch] .copyright__link
      link_hover(theme.LINK_ACTIVE)
