.themifier
  cursor default
  height 100%
  left 0
  position fixed
  top 0
  width 100vw

THEMES = {
  light: {
    BACKGROUND: #f7f7f7
    BORDER: #ddd
    FACE: white
    HANDS: black
  },
  dark: {
    BACKGROUND: #111
    BORDER: #222
    FACE: black
    HANDS: white
  }
}

for name, theme in THEMES
  [theme=\"{name}\"]
    {body}&
      background theme['BACKGROUND'];

    .clocks
      background theme['FACE'];
      border 1px solid theme['BORDER'];

    .clock__hand
      stroke theme['HANDS'];

    .clock__pivot
      fill theme['HANDS'];
