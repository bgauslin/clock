ClockThemes = {
  light: {
    BACKGROUND: #f7f7f7
    BORDER: #ddd
    FACE: white
    HANDS: black
  },
  dark: {
    BACKGROUND: #111
    BORDER: #222
    FACE: black
    HANDS: white
  }
