body[no-js]
  background white

body[no-js] .clocks
  display none
  
LINK_COLOR = #0070c9

.no-js
  color #333
  font-family 'Helvetica Neue', Helvetica, Arial , sans-serif
  font-weight bold
  padding 1rem

.no-js__message
  margin 0 auto
  max-width 30rem
  padding 2rem
  text-align center

.no-js__message > a
  link(LINK_COLOR, LINK_COLOR, rgba(LINK_COLOR, .7))

[no-touch] .no-js__message > a
  transition color TRANSITION_SPEED
  link_hover(rgba(LINK_COLOR, .7))

