OFFSET = 6%

.clocks
  background white
  border 1px solid #ddd
  margin px_to_rem(24)
  max-width px_to_rem(480)

.clocks__frame
  display flex
  flex-wrap wrap
  margin-right (OFFSET * -4)
  padding (OFFSET *2) (OFFSET * 2) OFFSET

.clocks__frame > n-clock
  flex 0 0 ((1 / 3) * 100%)
  height 100%
  margin (- OFFSET) 0 0 (- OFFSET)

n-clock
  display block

n-clock line
  stroke black
  stroke-width 6px

n-clock circle 
  fill black