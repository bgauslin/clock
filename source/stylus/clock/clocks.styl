OFFSET = 6%

n-clock
  display block
  stroke black
  stroke-linecap round
  stroke-width 4px

.clocks
  align-self center
  margin 0 (OFFSET * -2) 0 0
  padding (OFFSET * 2) 0 OFFSET (OFFSET * 2)

.clocks__frame
  display flex
  flex-wrap wrap

.clocks__frame > n-clock
  flex 0 0 ((1 / 3) * 100%)
  height 100%
  margin (- OFFSET) 0 0 (- OFFSET)
