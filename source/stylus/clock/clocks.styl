.clocks
  align-self center
  background var(--face)
  border 1px solid var(--border)
  grid-area content
  justify-self center
  margin 5vh 5vw
  max-width CLOCKS_MAX_WIDTH
  overflow hidden
  transition background var(--transition-theme), border var(--transition-theme)

.clocks__frame
  display flex
  flex-wrap wrap
  margin-right '-%s%' % (CLOCK_OFFSET * 4)
  padding '%s% %s% %s%' % ((CLOCK_OFFSET * 2) (CLOCK_OFFSET * 2) CLOCK_OFFSET)

n-clock
  display block

.clocks__frame > n-clock
  flex 0 0 (CLOCK_WIDTH * 100%)
  height 100%
  margin '-%s% 0 0 -%s%' % (CLOCK_OFFSET CLOCK_OFFSET)

.clock__hand
  stroke var(--hands)
  stroke-width '%spx' % (Clock.STROKE_WIDTH * 2)
  transition stroke var(--transition-theme)

.clock__pivot
  fill var(--hands)
  transition fill var(--transition-theme)
