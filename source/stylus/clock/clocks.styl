.clocks
  align-self center
  grid-area content
  justify-self center
  margin 5vh 5vw
  max-width CLOCKS_MAX_WIDTH
  overflow hidden
  transition 'background %s, border %s' % (Transition.THEME Transition.THEME)

.clocks__frame
  display flex
  flex-wrap wrap
  margin-right '%s%' % (CLOCK_OFFSET * -4)
  padding '%s% %s% %s%' % ((CLOCK_OFFSET * 2) (CLOCK_OFFSET * 2) CLOCK_OFFSET)

n-clock
  display block

.clocks__frame > n-clock
  flex 0 0 (CLOCK_WIDTH * 100%)
  height 100%
  margin '%s% 0 0 %s%' % ((- CLOCK_OFFSET) (- CLOCK_OFFSET))

.clock__hand
  stroke-width '%spx' % (ClockDimensions.STROKE_WIDTH * 2)
  transition 'stroke %s' % Transition.THEME

.clock__pivot
  transition 'fill %s' % Transition.THEME
